# enable kwm compatibility mode
# khd kwm on
#
# # set border color for different modes
# khd mode default color 0xddffd479
# khd mode resize color 0xdd458588
#
# cmd + ctrl - r          :   khd -e "reload" # reload config
# cmd + ctrl - return     :   open -na /Applications/iTerm.app; khd -e "mode activate default"
#
# # enter resize mode
# cmd + ctrl + shift - r          :   khd -e "mode activate resize"
#
# # change focus
# cmd + ctrl - h          :   kwmc window -f west
# cmd + ctrl - j          :   kwmc window -f south
# cmd + ctrl - k          :   kwmc window -f north
# cmd + ctrl - l          :   kwmc window -f east
#
# cmd + ctrl - n          :   kwmc display -f next
#
# # move windows
# cmd + ctrl + shift - h                :   kwmc window -s west
# cmd + ctrl + shift - j                :   kwmc window -s south
# cmd + ctrl + shift - k                :   kwmc window -s north
# cmd + ctrl + shift - l                :   kwmc window -s east
