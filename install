#!/usr/bin/env sh

files=`/bin/ls -FA | grep '^\.' | grep -v '\/$'`
dirs=`/bin/ls -Fd .* | grep -e "/$" | grep -v git | grep -v "\.\/$"`
dir=`pwd`

symlink () { 
  for dotfile in `seq 1 $#`; do
    echo "Symlinking ${!dotfile}"
    `ln -sf $dir/$dotfile $HOME`
  done
}

symlink $files
symlink $dirs
