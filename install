#!/usr/bin/env sh

files=`/bin/ls -FA | grep '^\.' | grep -v '\/$'`
dirs=`/bin/ls -Fd .* | grep -e "/$" | grep -v git | grep -v "\.\/$" | sed 's:/$::'`
dir=`pwd`

symlink () { 
  for dotfile; do
    echo "Symlinking $dotfile"
#    echo "Running: ln -sf $dir/$dotfile $HOME"
    `ln -sf $dir/$dotfile $HOME`
  done
}

symlink $files
symlink $dirs
